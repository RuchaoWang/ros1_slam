<launch>

    <!-- true使用bag的时间戳 -->
    <!-- false使用ros系统的时间戳 -->
    <param name="use_sim_time" value="false" />

    <!-- 启动 真值里程计 节点，这里的真值里程计是gazebo的插件 -->
    <node name="truth_pose_odom_node" pkg="robot_locatization" type="truth_pose_odom_node" output="screen" >
        <rosparam file="$(find robot_locatization)/config/truth_odometry.yaml" command="load"/>
    </node>

    <!-- 启动 plicp_odometry 节点，模拟实际场景中的运行 -->
    <node name="plicp_odometry_node" pkg="robot_locatization" type="plicp_odometry_node" output="screen" >
        <rosparam file="$(find robot_locatization)/config/plicp_odometry.yaml" command="load"/>
    </node>

    <!-- launch rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true"
        args="-d $(find robot_locatization)/rviz/truth_odometry.rviz" />

</launch>